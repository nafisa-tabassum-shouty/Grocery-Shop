<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    android:background="@drawable/grocery__1_">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textColor="#FDFCFC"
        android:textSize="48sp"
        android:textStyle="bold|italic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        ></TextView>

    <ImageView
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover a world of freshness, warm service and value"
        android:textColor="#F60404"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView"

        ></TextView>
    <TextView
        android:id="@+id/textView6"
        android:layout_width="365dp"
        android:layout_height="120dp"
        android:text="With over 60 outlets, Grocery is the largest grocery chain in Bangladesh and Best Retail Brand in the country. As part of the Grocery family, your satisfaction and wellbeing are what we work diligently to ensure. Most of all, we want to always leave you with a smile, whether you visit our stores or order online, and we are happy to serve you in whatever way we can.  So expect more."
        android:textColor="#F4F2F2"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="20dp"
        ></TextView>
    <TextView
        android:id="@+id/textView7"
        android:layout_width="352dp"
        android:layout_height="30dp"
        android:text=" Come and discover a different shopping experience. "
        android:textColor="#FAF8F8"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="30dp"
        ></TextView>
    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Grocery!"
        android:textColor="#F8F6F6"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView7"
        ></TextView>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="41dp"
        android:layout_height="43dp"

        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        app:srcCompat="@android:drawable/ic_dialog_map"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_marginTop="18dp"
        android:text="2008 "
        android:textColor="#FDFDFD"
        android:layout_marginLeft="64dp"
        />
    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESTABLISHED"
        android:textColor="#FBFAFA"
        android:layout_below="@+id/textView10"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dp"
        ></TextView>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="43dp"
        android:layout_height="41dp"

        android:layout_marginRight="7dp"

        app:srcCompat="@drawable/ic_baseline_person_24"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        ></ImageView>
    <TextView
        android:id="@+id/textView12"
        android:layout_width="39dp"
        android:layout_height="20dp"
        android:text="4,300+"
        android:textColor="#FAF8F8"

        android:layout_alignBaseline="@+id/textView10"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="195dp"
        ></TextView>
    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COLLEAGUES"
        android:textColor="#FBF9F9"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_below="@+id/imageView3"
        android:layout_marginLeft="170dp"></TextView>
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="45dp"
        android:layout_height="43dp"
        app:srcCompat="@drawable/home"

        android:layout_toRightOf="@+id/imageView3"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="70dp"

        ></ImageView>
    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="305+"
        android:textColor="#F8F6F6"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_toRightOf="@+id/textView12"
        android:layout_marginLeft="85dp"

        ></TextView>
    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OUTLETS"
        android:textColor="#FDFCFC"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:layout_marginLeft="50dp"

        ></TextView>
</RelativeLayout>